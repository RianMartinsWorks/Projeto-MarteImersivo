@model PIM_WEB_MARTE.Models.AdminModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    <link rel="stylesheet" href="~/Style/Style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Imagens/Logo1.png" style="width: 280px; height: 70px;">
            </a>

            <!-- Botão para alternar o menu em dispositivos móveis -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Itens do menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#Inicio">Página Inicial</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Mapa">Mapa do Museu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Historia">Histórias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Questionario">Questionário</a>
                    </li>
                </ul>
            </div>

            <!-- Botão de Alternância de Tema -->
            <button id="themeToggleBtn" class="btn btn-light btn-sm"
                    style="position: fixed; top: 10px; right: 10px; z-index: 9999;">
                Alternar para Tema Escuro
            </button>
        </div>
    </nav>

    <section id="Inicio" class="vh-100 bg-black d-flex flex-column justify-content-center align-items-center text-center">
        <div class="container-fluid text-white px-4">
            <!-- Imagem no topo -->
            <img class="img-fluid mb-4"
                 src="~/Imagens/Escrita.png"
                 alt="Bem-vindo"
                 style="max-width: 350px;" />

            <!-- Título -->
            <h1 class="fw-bold mb-4">Bem-vindo ao Museu Marte Imersivo</h1>

            <!-- Texto descritivo -->
            <p class="lead" style="max-width: 42em; margin: 0 auto;">
                Prepare-se para embarcar em uma aventura extraordinária e explorar os mistérios de Marte!
                Aqui, você será transportado para um mundo onde a ficção científica se encontra com a
                realidade da exploração espacial. Venha conhecer as histórias fascinantes e o futuro
                das viagens interplanetárias.
            </p>
        </div>
    </section>

  
    <style>
        #Mapa img {
            max-width: 800px;
            border-radius: 25px;
            border: 5px solid rgba(0, 0, 0, 0.5);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            /* Efeito de hover no mapa */
            #Mapa img:hover {
                transform: scale(1.05);
                box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.5);
            }
    </style>
    <section id="Mapa" class="vh-100 d-flex flex-column justify-content-center align-items-center text-center position-relative">
        <h1 class="fw-bold mb-4" id="mapTitle">Mapa do Museu</h1>

        <div class="d-flex justify-content-center align-items-center w-100">
            <img class="img-fluid"
                 src="~/Imagens/mapa.png"
                 alt="Mapa do Museu"
                 style="max-width: 800px; border-radius: 25px;" />
        </div>
    </section>



    <section>

        <style>
            body {
                font-family: Arial, sans-serif;
                background-image: url(/Imagens/bg5.png);
                color: #fff;
            }
        </style>
        <div class="container">
            <div class="custom-div">
                <h2>Marte Imersivo</h2>
                <div class="divider"></div>
                <p>
                    Nossa missão é explorar Marte, demonstrar as novidades cientificas.
                </p>
            </div>

            <div class="custom-div">
                <h2>Serviços</h2>
                <div class="divider"></div>
                <p>
                    Mostrar as grandezas e novidades de marte de uma forma divetida.
                </p>
            </div>

            <div class="custom-div">
                <h2>Objetivos</h2>
                <div class="divider"></div>
                <p>
                    Atingir novos avanços científicos, desenvolver tecnologias.
            </div>
        </div>

    </section>

    <section id="Historia" style="margin-block-end: 30px;">
        <div class="title-container" style="text-align: center; padding-top: 50px;">
            <h1>Histórias/Curiosidades</h1>
        </div>
        <style>

            /* Estilizando os botões de navegação */
            #carouselExampleIndicators .carousel-control-prev-icon,
            #carouselExampleIndicators .carousel-control-next-icon {
            background-color: rgba(0, 0, 0, 0.5); /* Fundo semi-transparente */
            border-radius: 50%; /* Deixa o botão redondo */
            padding: 10px;
            }

            /* Centralizando e ajustando os botões */
            #carouselExampleIndicators .carousel-control-prev,
            #carouselExampleIndicators .carousel-control-next {
            width: 40px;
            height: 40px;
            top: 50%; /* Posiciona o botão no meio verticalmente */
            transform: translateY(-50%); /* Ajusta para centralizar completamente */
            border: 2px solid white;
            border-radius: 50%;
            transition: transform 0.2s ease;
            }

            /* Efeito de hover */
            #carouselExampleIndicators .carousel-control-prev:hover,
            #carouselExampleIndicators .carousel-control-next:hover {
            transform: translateY(-50%) scale(1.1); /* Centraliza e aumenta no hover */
            background-color: rgba(0, 0, 0, 0.7);
            }

        </style>
        <div class="w-100 d-flex flex-wrap justify-content-center align-items-start" style="gap: 20px;">
            <div id="carouselExampleIndicators" class="carousel slide" style="max-width: 600px; flex: 1;">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Imagens/historia1.png" class="d-block w-100" alt="..." style="height: 400px; object-fit: cover; border-radius: 20px;">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Imagens/historia3.png" class="d-block w-100" alt="..." style="height: 400px; object-fit: cover; border-radius: 20px;">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Imagens/historia4.png" class="d-block w-100" alt="..." style="height: 400px; object-fit: cover; border-radius: 20px;">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Imagens/historia2.png" class="d-block w-100" alt="..." style="height: 400px; object-fit: cover; border-radius: 20px;">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="visually-hidden">Anterior</span>
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="visually-hidden">Próximo</span>
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
            </div>

            <div id="carousel-text" class="text-container" style="flex: 1;">
                <h2 class="fs-2" id="title-text">Vida em Marte</h2>
                <h3 id="description-text" class="fs-5">
                    A existência de vida em Marte ainda é uma questão em aberto. Mas há indícios que podem sugerir que o planeta já tenha abrigado vida ou que ainda a abrigue: Em agosto de 2024, a NASA anunciou a detecção de possíveis bioassinaturas em uma rocha marciana.
                </h3>
            </div>
        </div>

        <script>
            const carouselElement = document.getElementById('carouselExampleIndicators');
            const titleText = document.getElementById('title-text');
            const descriptionText = document.getElementById('description-text');

            const texts = [
                {
                    title: 'Vida em Marte',
                    description: 'A existência de vida em Marte ainda é uma questão em aberto, mas há indícios que podem sugerir que o planeta já tenha abrigado vida ou que ainda a abrigue: Em agosto de 2024, a NASA anunciou a detecção de possíveis bioassinaturas em uma rocha marciana.'
                },
                {
                    title: 'Exploração de Marte',
                    description: 'A primeira missão bem sucedida a Marte, a nave espacial Mariner 4, foi lançada pela NASA a 28 de Novembro de 1964. Ela passou a cerca de 9000 kilómetros de Marte a 14 de Julho de 1965 e enviou, como planeado, 22 imagens'
                },
                {
                    title: 'Phobos e Deimos',
                    description: 'Marte possui duas pequenas luas, Phobos e Deimos, descobertas em 1877. Phobos é a maior, com diâmetro de 25 km; Deimos é a menor, com 15 km.'
                },
                {
                    title: 'Marte Atualmente',
                    description: 'Em 2016, o fundador da SpaceX, Elon Musk, revelou sua grande ambição de criar uma colônia humana em Marte. Naquela época, o empresário esperava ver uma missão tripulada ao nosso vizinho planetário acontecer logo em 2024. Mais adiante, ele recalculou seus planos para 2026.'
                }
            ];

            carouselElement.addEventListener('slide.bs.carousel', function (event) {
                const index = event.to;
                titleText.textContent = texts[index].title;
                descriptionText.textContent = texts[index].description;
            });
        </script>
    </section>




    <section id="Questionario" class="d-flex justify-content-center align-items-center py-5">
        <div class="col-md-6">
            <div id="alert-container"></div> <!-- Onde a mensagem de sucesso será exibida -->

            @using (Html.BeginForm("SubmitFeedback", "Home", FormMethod.Post, new { id = "questionario-form" }))
            {
                <h2 class="text-center mb-4">Questionário de Satisfação</h2>

                <div class="form-group">
                    <label for="satisfaction-1">Como foi sua experiência?</label>
                    <select name="Resposta1" id="satisfaction-1" class="form-control">
                        <option value="Muito Boa">Muito Boa &#128513;</option>
                        <option value="Boa">Boa &#128528;</option>
                        <option value="Ruim">Ruim &#128532;</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="satisfaction-2">Como você avaliaria a qualidade das informações?</label>
                    <select name="Resposta2" id="satisfaction-2" class="form-control">
                        <option value="Muito Boa">Muito Boa &#128513;</option>
                        <option value="Boa">Boa &#128528;</option>
                        <option value="Ruim">Ruim &#128532;</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="satisfaction-3">Como avaliaria no geral?</label>
                    <select name="Resposta3" id="satisfaction-3" class="form-control">
                        <option value="Muito Boa">Muito Boa &#128513;</option>
                        <option value="Boa">Boa &#128528;</option>
                        <option value="Ruim">Ruim &#128532;</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="user-message">Sugestões adicionais (Opcional):</label>
                    <textarea name="Sugestao" id="user-message" class="form-control" rows="4"></textarea>
                </div>

                <div class="form-group">
                    <label for="user-email">Informe seu e-mail (opcional):</label>
                    <input type="email" name="Email" id="user-email" class="form-control" required />
                </div>

                <button type="submit" class="btn">Enviar</button>
            }
        </div>
    </section>


    <section id="Resultados" class="results-container">
        <div class="results-title">
            <h2>RESULTADOS</h2>
            <h1>Média de Satisfação</h1>
        </div>

        <div class="metrics-container">
            <div id="exhibitions-metric" class="metric">
                <h3>Média sobre a Experiência no Museu</h3>
                <div class="percentage-circle">
                    <span class="percentage">
                        @(ViewBag.MediaResposta1 != null ? ViewBag.MediaResposta1.ToString("0.0") : "Sem dados")%
                    </span>
                </div>
            </div>
            <div id="satisfaction-metric" class="metric">
                <h3>Média de Qualidade das informações</h3>
                <div class="percentage-circle">
                    <span class="percentage">
                        @(ViewBag.MediaResposta2 != null ? ViewBag.MediaResposta2.ToString("0.0") : "Sem dados")%
                    </span>
                </div>
            </div>
            <div id="general-metric" class="metric">
                <h3>Média de Avaliação Geral Sobre o Museu</h3>
                <div class="percentage-circle">
                    <span class="percentage">
                        @(ViewBag.MediaResposta3 != null ? ViewBag.MediaResposta3.ToString("0.0") : "Sem dados")%
                    </span>
                </div>
            </div>
        </div>
    </section>

    <section>
        <footer class="footer-content d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center text-white">
            <!-- Seção sobre o site -->
            <div class="about-text col-12 col-md-7 text-center mb-4 mb-md-0">
                <h2>
                    <img src="~/Imagens/Logo1.png" alt="Logo do site" class="img-fluid" style="max-width: 80%; height: auto;" />
                </h2>
                <br>
                <p class="about-text-description">
                    Explore os mistérios de Marte, onde tecnologia e história se unem para trazer o universo à ponta<br>dos seus dedos. Fique ligado enquanto continuamos a expandir com novos temas e exibições.
                </p>
            </div>

            <!-- Seção de login -->
            <section class="login-section-adm col-12 col-md-5 text-center">
                <h2 class="login-title-adm mb-4">Login de Administrador</h2>

                @using (Html.BeginForm("Entrar", "Admin", FormMethod.Post))
                {
                    <!-- Exibe mensagens de erro gerais, se houver -->
                    <div class="text-danger mb-3">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group-adm mb-3">
                        <label for="Login" class="label-adm">Usuário</label>
                        <input type="text" asp-for="Login" id="Login" name="Login" class="input-adm" placeholder="Digite seu nome de usuário" required>
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Login)</span>
                    </div>

                    <div class="form-group-adm mb-3">
                        <label for="Senha" class="label-adm">Senha</label>
                        <input type="password" asp-for="Senha" id="Senha" name="Senha" class="input-adm" placeholder="Digite sua senha" required>
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Senha)</span>
                    </div>

                    <div class="form-group-adm">
                        <button type="submit" id="button-adm" class="btn btn-primary w-100">Entrar</button>
                    </div>
                }
            </section>
        </footer>


    </section>

    <section class="bg-black d-flex justify-content-center flex-column align-items-center text-center">
        <p>&copy; 2024 Seu Projeto. Todos os direitos reservados.</p>
        <div class="copyright">
            <span>&copy; MARTE IMERSIVO 2024</span>
        </div>
    </section>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/JavaScript/script.js"></script>
    <script src="~/Scripts/JavaScript/feedback.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")



</body>
</html>
