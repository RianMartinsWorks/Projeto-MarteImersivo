@model IEnumerable<PIM_WEB_MARTE.Models.Feedback>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background: url(/Imagens/bg3.png);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }
</style>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Style/Feedback.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<div class="container">
    <h2 class="text-center">Feedbacks</h2>

    <p class="text-right">
        @Html.ActionLink("Voltar ao Site", "Principal", "Home", new { area = "" }, new { @class = "btn btn-primary" })
    </p>

    <p class="text-right">
        @Html.ActionLink("Acionar novo", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Resposta1)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Resposta2)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Resposta3)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Sugestao)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Resposta 1">@Html.DisplayFor(modelItem => item.Resposta1)</td>
                        <td data-label="Resposta 2">@Html.DisplayFor(modelItem => item.Resposta2)</td>
                        <td data-label="Resposta 3">@Html.DisplayFor(modelItem => item.Resposta3)</td>
                        <td data-label="Sugestão">@Html.DisplayFor(modelItem => item.Sugestao)</td>
                        <td data-label="Email">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td data-label="Ações">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" }) |
                            <button class="btn btn-success btn-sm" onclick="openOutlook()">Enviar Email</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        function openOutlook() {
            window.open('https://outlook.live.com/', '_blank');
        }
    </script>
</div>
